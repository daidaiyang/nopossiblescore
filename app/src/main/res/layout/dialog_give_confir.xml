<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
   android:background="@drawable/rect_circle_x29_white"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x55"
        android:textSize="@dimen/textSize46"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_black_33"
        android:text="确认信息"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x58"
        android:layout_marginTop="@dimen/x70"
        android:textSize="@dimen/textSize40"
        android:textColor="@color/text_black_33"
        android:text="赠送对象粮仓码"/>
    <TextView
        android:id="@+id/dialog_code"
        android:layout_width="@dimen/x900"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x58"
        android:layout_marginTop="@dimen/x25"
        android:textSize="@dimen/textSize40"
        android:textColor="@color/text_black_33"
        android:text="rtrWERERWuiiiuii34435436556sdfDSF2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x58"
        android:layout_marginTop="@dimen/x70"
        android:textSize="@dimen/textSize40"
        android:textColor="@color/text_black_33"
        android:text="赠送数量(石)"/>
    <TextView
        android:id="@+id/dialog_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x58"
        android:layout_marginTop="@dimen/x25"
        android:textSize="@dimen/textSize52"
        android:textColor="@color/text_black_b2f"
        android:text="42.5663"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x3"
        android:layout_marginTop="@dimen/x70"
        android:background="@color/text_black_cc"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y127"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_cancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/textSize46"
            android:textColor="@color/text_black_66"
            android:gravity="center"
            android:text="取消赠送"/>
        <TextView
            android:id="@+id/dialog_give"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/textSize46"
            android:textColor="@color/text_black_66"
            android:background="@drawable/rect_circle_x29_bottom_ff"
            android:gravity="center"
            android:text="确认赠送"/>
    </LinearLayout>

</LinearLayout>