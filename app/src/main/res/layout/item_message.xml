<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x42"
    android:paddingRight="@dimen/x42"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/x50"
        android:layout_marginBottom="@dimen/x40"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/message_unread"
            android:layout_width="@dimen/x17"
            android:layout_height="@dimen/x17"
            android:layout_marginRight="@dimen/x14"
            android:src="@drawable/circle_x14_33"
            />

        <TextView
            android:id="@+id/message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize46"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:text="消息标题消息标题消息标题消息标题消息标题消息标题消息标题消"/>


    </LinearLayout>
    <TextView
        android:id="@+id/message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize40"
        android:textColor="@color/text_black_66"
        android:layout_marginBottom="@dimen/x40"
        android:text="消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容。"/>

    <TextView
        android:id="@+id/message_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="@dimen/textSize35"
        android:textColor="@color/text_black_66"
        android:layout_marginBottom="@dimen/x50"
        android:text="2019-02-18 12:45:04"/>
</LinearLayout>