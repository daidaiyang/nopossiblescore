<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y127"
        android:paddingLeft="@dimen/x40"
        android:paddingRight="@dimen/x40"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_record_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize46"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:text="每日分粮"/>
        <TextView
            android:id="@+id/item_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize35"
            android:textColor="@color/text_black_99"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="2018-11-15 15:14:44"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x3"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:background="@color/text_black_dd"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/x40"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_record_changeNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize52"
            android:textColor="@color/back_2cc"
            android:layout_gravity="bottom"
            android:text="+256.345"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize35"
            android:textColor="@color/black"
            android:layout_gravity="bottom"
            android:text="石"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/x1"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize35"
        android:textColor="@color/black"
        android:layout_gravity="bottom"
        android:text="余"/>
        <TextView
            android:id="@+id/item_record_leftNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize52"
            android:textColor="@color/black"
            android:layout_gravity="bottom"
            android:text="425.147"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize35"
            android:textColor="@color/black"
            android:layout_gravity="bottom"
            android:text="石"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_record_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginBottom="@dimen/x40"
        android:text="当日34个积分换1石粮食，共3422个积分"/>


</LinearLayout>