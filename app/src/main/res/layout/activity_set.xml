<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgrould_f2"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/current_version"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y127"
            android:layout_marginTop="@dimen/x23"
            android:paddingLeft="@dimen/x40"
            android:paddingRight="@dimen/x40">

            <TextView
                android:id="@+id/version_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="当前版本"
                android:textColor="@color/black"
                android:textSize="@dimen/x43" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x50"
                android:text="已是最新版本"
                android:textColor="@color/text_black_99"
                android:textSize="@dimen/textSize37" />

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:src="@drawable/jiantou_right" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y127"
            android:background="@color/white"
            android:layout_marginTop="@dimen/x3"
            android:paddingLeft="@dimen/x40"
            android:paddingRight="@dimen/x40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="清除缓存"
                android:textColor="@color/black"
                android:textSize="@dimen/x43" />

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:src="@drawable/jiantou_right" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/contraus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y127"
            android:background="@color/white"
            android:layout_marginTop="@dimen/x3"
            android:paddingLeft="@dimen/x40"
            android:paddingRight="@dimen/x40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="联系我们"
                android:textColor="@color/black"
                android:textSize="@dimen/x43" />

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:src="@drawable/jiantou_right" />
        </RelativeLayout>


        <TextView
            android:id="@+id/exitapp"
            android:layout_width="@dimen/x749"
            android:layout_height="@dimen/y127"
            android:background="@drawable/rect_circle_x63_ff_kuang"
            android:textSize="@dimen/textSize46"
            android:textColor="@color/text_black_ff"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y173"
            android:text="退出登录"/>
    </LinearLayout>
</LinearLayout>