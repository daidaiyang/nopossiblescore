<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/include_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y288"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/x35"
        android:layout_marginBottom="@dimen/x35"
        android:layout_marginRight="@dimen/x40"
        android:background="@drawable/granary_background"
        android:padding="@dimen/x35">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x30"
            android:includeFontPadding="false"
            android:text="我的粮仓码"
            android:textColor="@color/white"
            android:textSize="@dimen/x46" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x120"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/give_mine_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="rtrWERERWuiiiuii34435436556"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/give_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:background="@drawable/rect_circle_x6_white_kuang"
                android:paddingLeft="@dimen/x19"
                android:paddingTop="@dimen/x5"
                android:paddingRight="@dimen/x19"
                android:paddingBottom="@dimen/x5"
                android:text="复制"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize35" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize40"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/x40"
        android:includeFontPadding="false"
        android:text="赠送对象的粮仓码"/>
    
    
    <EditText
        android:id="@+id/give_others_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x115"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/x35"
        android:textSize="@dimen/textSize40"
        android:textColor="@color/black"
        android:textColorHint="@color/text_black_99"
        android:hint="请输入赠送对象的粮仓码"
        android:paddingLeft="@dimen/x23"
        android:paddingRight="@dimen/x23"
        android:gravity="center_vertical"
        android:background="@drawable/rect_circle_x14_cc_kuang"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize40"
        android:layout_marginTop="@dimen/x50"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/x40"
        android:includeFontPadding="false"
        android:text="赠送粮草的数量(石)"/>


    <EditText
        android:id="@+id/give_others_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x115"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/x35"
        android:textSize="@dimen/textSize40"
        android:textColor="@color/black"
        android:textColorHint="@color/text_black_99"
        android:hint="请输入要赠送的石数"
        android:inputType="number"
        android:paddingLeft="@dimen/x23"
        android:paddingRight="@dimen/x23"
        android:gravity="center_vertical"
        android:background="@drawable/rect_circle_x14_cc_kuang"
        />

    <TextView
        android:id="@+id/give_cangive_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize35"
        android:textColor="@color/text_black_66"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/x20"
        android:text="最多可赠送45,342.3455663"/>
    
    
    
    <TextView
        android:id="@+id/give_give"
        android:layout_width="@dimen/x749"
        android:layout_height="@dimen/y127"
        android:textColor="@color/white"
        android:background="@drawable/rect_circle_x49_jianbian"
        android:gravity="center"
        android:textSize="@dimen/textSize46"
        android:layout_marginTop="@dimen/x300"
        android:layout_gravity="center_horizontal"
        android:text="立即赠送"/>

</LinearLayout>